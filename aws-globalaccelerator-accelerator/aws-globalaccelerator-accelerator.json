{
  "typeName": "AWS::GlobalAccelerator::Accelerator",
  "description": "Resource schema for AWS::GlobalAccelerator::Accelerator.",
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-resource-providers-globalaccelerator",
  "definitions": {
    "Tag": {
      "description": "Tag is a key-value pair associated with accelerator.",
      "type": "object",
      "properties": {
        "Key": {
          "description": "Key of the Tag. You can specify a value that is 1 to 127 characters.",
          "type": "string",
          "minLength": 1,
          "maxLength": 127
        },
        "Value": {
          "description": "Value for the Tag. You can specify a value that is 1 to 255 characters.",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": [
        "Value",
        "Key"
      ]
    },
    "IpAddress": {
      "description": "The IP addresses from BYOIP Prefix pool.",
      "type": "string"
    }
  },
  "properties": {
    "Name": {
      "description": "Name of accelerator.",
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{0,64}$",
      "minLength": 1,
      "maxLength": 64
    },
    "IpAddressType": {
      "description": "IP Address type.",
      "type": "string",
      "enum": [
        "IPV4",
        "IPV6"
      ]
    },
    "IpAddresses": {
      "description": "The IP addresses from BYOIP Prefix pool.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/IpAddress"
      }
    },
    "Enabled": {
      "description": "Indicates whether an accelerator is enabled. The value is true or false.",
      "type": "string",
      "enum": [
        "true",
        "false"
      ]
    },
    "IdempotencyToken": {
      "description": "A unique, case-sensitive identifier that you provide to ensure the idempotency",
      "type": "string"
    },
    "AcceleratorArn": {
      "description": "The Amazon Resource Name (ARN) of the accelerator",
      "type": "string"
    },
    "Tags": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Tag"
      }
    }
  },
  "handlers": {
    "create": {
      "permissions": [
        "globalaccelerator:CreateAccelerator",
        "globalaccelerator:DescribeAccelerator"
      ]
    },
    "read": {
      "permissions": [
        "globalaccelerator:DescribeAccelerator"
      ]
    },
    "update": {
      "permissions": [
        "globalaccelerator:UpdateAccelerator"
      ]
    },
    "delete": {
      "permissions": [
        "globalaccelerator:UpdateAccelerator",
