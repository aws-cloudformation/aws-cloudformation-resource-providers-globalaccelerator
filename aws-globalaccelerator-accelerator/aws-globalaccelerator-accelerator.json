      ]
    },
    "list": {
      "permissions": [
        "globalaccelerator:ListAccelerator"
      ]
    }
  },
  "writeOnlyProperties": [
    "/properties/IdempotencyToken"
  ],
  "createOnlyProperties": [
    "/properties/Name"
  ],
  "primaryIdentifier": [
    "/properties/Name"
  ],
  "additionalProperties": false
